@model MyBlog.Models.Posts
@using MyBlog.Models

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>Create</h2>
<div id="templatemo_content">
    @using (Html.BeginForm("Create", "User", FormMethod.Post, new { style = "width:600px", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="post_box">
            <fieldset>
                <legend>Posts</legend>

                <div class="editor-label">
                    @Html.Label("Type Post Title")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
                <div class="editor-label">
                    @Html.Label("Type Post")
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.Body)
                    @Html.ValidationMessageFor(model => model.Body)
                </div>
                <div class="editor-label">
                    @Html.Label("Choose a Category")
                </div>
                <div>
                    <select id="Category" name="Category">
                        <option value="Technology">Technology</option>
                        <option value="Music">Music</option>
                        <option value="Sport">Sport</option>
                        <option value="Entertaintment">Entertaintment</option>
                        <option value="Social">Social Live</option>
                    </select>
                </div>
                <div class="editor-label">
                    @Html.Label("Browse Post Image")
                </div>
                <div class="editor-field">
                    <input id="PhotoLocation" title="Upload a product image"
                           type="file" name="file" />
                </div>
                <p>
                    <input type="submit" value="Create" />
                </p>
            </fieldset>
        </div>
    }
</div>